<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LOBSDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_DarkMode</item>
<!--        <item name="colorPrimaryDark">@color/yellow_dark_DarkMode</item>-->
        <item name="colorPrimaryDark">@color/gray_dark_DarkMode</item>
        <item name="colorOnPrimary">@color/gray_dark_DarkMode</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_DarkMode</item>
        <item name="colorSecondaryVariant">@color/gray_light_DarkMode</item>
        <item name="colorOnSecondary">@color/gray_DarkMode</item>
        <item name="android:windowBackground">@color/gray_dark_DarkMode</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>

    </style>

    <style name="Theme.LOBSLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_LightMode</item>
        <item name="colorPrimaryDark">@color/gray_LightMode</item>
        <item name="colorAccent">@color/blue_LightMode</item>
        <!-- Secondary brand color. -->
        <item name="android:textColor">@color/gray_dark_DarkMode</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white_LightMode</item>
        <item name="android:fontFamily">Arial</item>
    </style>
</resources>