<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.DialogTheme</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">#FFC62C</item>
        <item name="android:windowBackground">@color/black_LightMode</item>
        <item name="colorControlActivated">#FFC62C</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColorPrimaryInverse">@color/black_LightMode</item>
        <item name="android:textColorSecondaryInverse">@color/black_LightMode</item>
    </style>

    <style name="GlossyButton">
        <item name="android:background">@drawable/btn_glossy</item>
        <item name="android:startColor">@color/blue_LightMode</item>
        <item name="android:centerColor">@color/yellow_light_DarkMode</item>
        <item name="android:endColor">@color/yellow_dark_DarkMode</item>
        <item name="android:width">200dp</item>
        <item name="android:height">45dp</item>
        <item name="android:radius">30dp</item>
        <item name="android:angle">90</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>