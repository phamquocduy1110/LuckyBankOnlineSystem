<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow_dark_DarkMode"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShortName"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_transaction_overview_line_item"
            android:gravity="center"
            android:text="X"
            android:textAlignment="center"
            android:textColor="@color/gray_dark_DarkMode"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTransactionId"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="1.5dp"
                android:gravity="bottom"
                android:text="Transaction: "
                android:textColor="@color/gray_dark_DarkMode"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTransactionPerformTime"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="1.5dp"
                android:text="abc"
                android:textColor="@color/gray_DarkMode"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvMessageTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.5dp"
                android:text="Thanksssssssss"
                android:textColor="@color/gray_DarkMode"
                android:textSize="10.5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTransactionValue"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_transaction_overview_line_item"
            android:gravity="center"
            android:text="- 10000"
            android:textAlignment="center"
            android:textColor="@color/gray_dark_DarkMode"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>
</HorizontalScrollView>