<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/golddddd"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                app:srcCompat="@mipmap/logo" />

            <ImageView
                android:id="@+id/iconCheck"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_baseline_account_circle_24"
                android:src="@drawable/ic_round_info_24" />

            <TextView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="logo"
                android:text="Success!"
                android:textColor="@color/colorPrimary2"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/transactionNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="500,000,000 VND"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="logo"
                android:text="10:05 Friday 13/11/2020"
                android:textColor="@color/login_form_details"
                android:textSize="16dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/login_form_details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTradingCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@drawable/ic_user"
                        android:text="Transaction Number"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtTradingCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="16dp"
                        android:src="@drawable/ic_user"
                        android:text="5525252626262"
                        android:textAlignment="textStart"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBeneficiaryName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@drawable/ic_user"
                        android:text="Beneficiary's Email"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtBeneficiaryName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="16dp"
                        android:src="@drawable/ic_user"
                        android:text="anonymous@gmail.com"
                        android:textAlignment="textStart"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/login_form_details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBeneficiaryAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@drawable/ic_user"
                        android:text="Beneficiary's Account Number"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtBeneficiaryAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="16dp"
                        android:src="@drawable/ic_user"
                        android:text="1609503860"
                        android:textAlignment="textStart"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/login_form_details" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/login_form_details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@drawable/ic_user"
                        android:text="Message"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="16dp"
                        android:src="@drawable/ic_user"
                        android:text="Thanks"
                        android:textAlignment="textStart"
                        android:textColor="@color/login_form_details"
                        android:textColorHint="@color/login_form_details"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>