<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="287dp"
    android:layout_height="195dp"
    android:layout_gravity="center_horizontal"
    android:scaleType="fitXY">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="287dp"
        android:layout_height="195dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imvCard1"
            android:layout_width="284dp"
            android:layout_height="194dp"
            android:layout_gravity="center"
            android:baselineAlignBottom="false"
            android:layoutDirection="inherit"
            android:scaleType="fitXY"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.003"
            app:srcCompat="@drawable/cardsaving"
            tools:srcCompat="@drawable/cardsaving" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="2dp"
                android:text="USER NAME"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/gray_dark_DarkMode"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAccnumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="113141414141"
                android:textAlignment="textStart"
                android:textColor="@color/gray_dark_DarkMode"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cardType"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:text="Primary"
                android:textAlignment="textStart"
                android:textColor="@color/gray_dark_DarkMode"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentBalanceOnCard"
                    android:layout_width="118dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:text="53535353"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray_dark_DarkMode"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dateCreated1"
                    android:layout_width="88dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="30dp"
                    android:text="12/12/2020"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_dark_DarkMode"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>