<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnOpenSaving2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="600dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter amount to save"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected amount"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="401dp" />

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="158dp" />

    <EditText
        android:id="@+id/editResult"
        android:layout_width="210dp"
        android:layout_height="113dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="433dp" />

    <RadioButton
        android:id="@+id/radio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-month "
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="241dp" />

    <RadioButton
        android:id="@+id/radio6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6-month "
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="241dp" />

    <RadioButton
        android:id="@+id/radio12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-month "
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="294dp" />

    <RadioButton
        android:id="@+id/radio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3-month "
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="349dp" />

    <RadioButton
        android:id="@+id/radio24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24-month "
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="346dp" />

    <RadioButton
        android:id="@+id/radio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2-month "
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="294dp" />

</androidx.constraintlayout.widget.ConstraintLayout>