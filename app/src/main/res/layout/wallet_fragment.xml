<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Fragment.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="151dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="40dp"

                android:baselineAlignBottom="true"
                app:srcCompat="@drawable/lobs_logo"
                tools:srcCompat="@drawable/lobs_logo" />

            <TextView
                android:id="@+id/tvHi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:text="Wallet Overview"
                android:textAlignment="center"

                android:textColor="#7E7E7E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTotalAcc"
                android:layout_width="322dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="0"

                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="284dp"
                android:layout_height="203dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="100dp">

                <ImageView
                    android:id="@+id/imvCard1"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:baselineAlignBottom="false"
                    android:layoutDirection="inherit"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/card"
                    tools:srcCompat="@drawable/card" />

                <TextView
                    android:id="@+id/tvAccnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="56dp"
                    android:text="113141414141"
                    android:textAllCaps="true"
                    android:textColor="#B3B3B3"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="35dp"
                    android:text="USER NAME"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvDetails"
                    android:layout_width="235dp"
                    android:layout_height="99dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="90dp"
                    android:shadowColor="#FFFFFF"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#FFFFFF"
                    android:textSize="11.5sp" />

            </FrameLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"
                android:text="Suspend"
                android:textAllCaps="false"
                android:textSize="12sp"
                tools:cornerRadius="60dp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>