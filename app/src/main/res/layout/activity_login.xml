<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:background="@color/gray_dark_DarkMode"

    tools:context="com.example.myfirstapp.luckybankonlinesystem.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                app:srcCompat="@mipmap/logo" />

            <TextView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:contentDescription="logo"
                android:text="Login into your LOBS account"
                android:textColor="@color/login_form_details"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:background="@drawable/et_bg"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textCursorDrawable="@null"
                android:textColor="@color/login_form_details"
                android:textColorHint="@color/login_form_details"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/txtPassword"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/icon" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_bg"
                android:drawableEnd="@drawable/ic_eye"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textCursorDrawable="@null"
                android:textColor="@color/login_form_details"
                android:textColorHint="@color/login_form_details"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:background="@drawable/btn_setup"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/black_LightMode"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@+id/txtPassword" />

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:text="@string/register_saying"
                android:textColor="@color/login_form_details"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.467"
                app:layout_constraintTop_toBottomOf="@id/btnSend" />

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Forgot password?"
                android:textColor="@color/login_form_details"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/btnSend" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
